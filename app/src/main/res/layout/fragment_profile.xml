<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yourp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#AD1457"
            android:text="Your profile"
            android:textAlignment="center"

            android:textColor="#FFFFFF"
            android:textSize="50sp"></TextView>

        <TextView
            android:layout_below="@+id/yourp"
            android:id="@+id/bio"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"

            android:text="Bio"
            android:textColor="#90A4AE"
            android:textSize="30sp"></TextView>
        <TextView
            android:layout_below="@+id/bio"
            android:id="@+id/name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_marginLeft="20dp"
            android:text="Your name"
            android:textColor="#90A4AE"
            android:textSize="30sp"></TextView>
        <TextView
            android:layout_below="@+id/name"
            android:id="@+id/nickn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_marginLeft="20dp"
            android:text="Nickname"
            android:textColor="#90A4AE"
            android:textSize="30sp"></TextView>

        <ImageView
            android:id="@+id/pro"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/image"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/name"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
           ></ImageView>

        <ImageButton

            android:layout_width="57dp"
            android:layout_height="54dp"
            android:layout_above="@+id/semail"
            android:layout_marginLeft="300dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cam"></ImageButton>
        <TextView
            android:layout_below="@+id/nickn"
            android:id="@+id/yemail"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your e-mail"
            android:layout_marginLeft="12dp"
            android:textColor="#000000"
            android:textSize="30sp"></TextView>
        <TextView
            android:layout_below="@+id/yemail"
            android:id="@+id/semail"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="E-mail"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#90A4AE"
            android:textSize="30sp"></TextView>
        <TextView
            android:layout_below="@+id/semail"
            android:id="@+id/ybranch"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Branch"
            android:layout_marginLeft="12dp"
            android:textColor="#000000"
            android:textSize="30sp"></TextView>
        <TextView
            android:layout_below="@+id/ybranch"
            android:id="@+id/sbranch"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Branch"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#90A4AE"
            android:textSize="30sp"></TextView>
        <TextView
            android:layout_below="@+id/sbranch"
            android:id="@+id/gyear"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Graduation Year"
            android:layout_marginLeft="12dp"
            android:textColor="#000000"
            android:textSize="30sp"></TextView>
        <TextView
            android:layout_below="@+id/gyear"
            android:id="@+id/syear"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Graduation year"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#90A4AE"
            android:textSize="30sp"></TextView>
        <TextView
            android:layout_below="@+id/syear"
            android:id="@+id/woe"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work or Experience"
            android:layout_marginLeft="12dp"
            android:textColor="#000000"
            android:textSize="30sp"></TextView>
        <TextView
            android:layout_below="@+id/woe"
            android:id="@+id/swoe"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Work or Experience"
            android:textColor="#90A4AE"
            android:textSize="30sp"></TextView>


    </RelativeLayout>
</ScrollView>