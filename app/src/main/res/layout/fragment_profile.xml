<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yourp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#AD1457"
            android:text="Your profile"
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"></TextView>

        <TextView
            android:layout_below="@+id/yourp"
            android:id="@+id/bio"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/border"
            android:text="Bio"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textSize="15sp"></TextView>
        <TextView
            android:layout_below="@+id/bio"
            android:id="@+id/yname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_marginLeft="12dp"
            android:padding="5dp"
            android:text="Your name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_below="@+id/proimg"
            android:id="@+id/nickn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="295dp"
            android:text="Nickname"
            android:textColor="#000000"
            android:textSize="15sp"></TextView>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/proimg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/image"
            android:layout_below="@+id/yname"
            android:layout_toRightOf="@+id/syear"
            android:layout_marginLeft="75dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
           ></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_below="@+id/yname"
            android:id="@+id/semail"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="E-mail"
            android:layout_marginLeft="12dp"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/ybranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/semail"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="Branch:-"
            android:textColor="#000000"
            android:textSize="15sp"></TextView>
        <TextView
            android:layout_toRightOf="@+id/ybranch"
            android:layout_below="@+id/semail"
            android:id="@+id/sbranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Branch"
            android:layout_marginLeft="12dp"
            android:textColor="#000000"
            android:textSize="15sp"></TextView>
        <TextView
            android:layout_below="@+id/ybranch"
            android:id="@+id/gyear"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graduation Year- "
            android:layout_marginLeft="12dp"
            android:textColor="#000000"
            android:textSize="15sp"></TextView>
        <TextView
            android:layout_toRightOf="@+id/gyear"
            android:layout_below="@+id/ybranch"
            android:layout_marginTop="5dp"
            android:id="@+id/syear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graduation year"
            android:textColor="#000000"
            android:textSize="15sp"></TextView>
        <TextView
            android:layout_below="@+id/nickn"
            android:id="@+id/woe"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work or Experience"
            android:layout_marginLeft="12dp"
            android:textColor="#000000"
            android:textSize="22sp"></TextView>
        <TextView
            android:layout_below="@+id/woe"
            android:id="@+id/swoe"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Work or Experience"
            android:textColor="#000000"
            android:textSize="18sp"></TextView>
        <ImageView
            android:id="@+id/change2"
            android:layout_width="44dp"
            android:layout_height="34dp"
            android:layout_below="@+id/swoe"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"

            android:layout_marginEnd="19dp"
            android:src="@drawable/ic_mode_edit_black_24dp"></ImageView>


    </RelativeLayout>
</ScrollView>