<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/parent_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="#5CFFEB3B">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cpic"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profilee_logo"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"></de.hdodenhof.circleimageview.CircleImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cpic"
            android:id="@+id/lay">
   <TextView
       android:id="@+id/name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Name"
       android:textSize="25sp"
       android:layout_weight="1"
       android:textColor="#000000"
       android:layout_marginLeft="20dp"
       ></TextView>

        <ImageView
            android:id="@+id/connect"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/name"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:src="@drawable/handshake"></ImageView></LinearLayout>

        <TextView
            android:id="@+id/branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Branch"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/cpic"
            android:layout_below="@+id/lay"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            ></TextView>
        <TextView
            android:id="@+id/yearic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3rd Year"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/cpic"
            android:layout_below="@+id/branch"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            ></TextView>
        <TextView
            android:id="@+id/aoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Areas of Interests,....,"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/cpic"
            android:layout_below="@+id/yearic"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            ></TextView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>