<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#AD1457"
            android:text="Areas of interest"
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"></TextView>

        <CheckBox
            android:id="@+id/checkBox1o"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Core"
            android:textSize="20sp"
            android:background="@drawable/border"
            android:layout_marginTop="30dp"

            />
        <CheckBox
            android:id="@+id/checkBox9o"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Entrepreneurship"
            android:textSize="20sp"
            android:background="@drawable/border"
            android:layout_marginTop="5dp"

            />

        <CheckBox
            android:id="@+id/checkBox2o"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Competitive Programming"
            android:textSize="20sp"
            android:background="@drawable/border"
            android:layout_marginTop="5dp"

            />


        <CheckBox
            android:id="@+id/checkBox3o"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Web Development"
            android:textSize="20sp"
            android:background="@drawable/border"
            android:layout_marginTop="5dp"

            />

        <CheckBox
            android:id="@+id/checkBox4o"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Data Science/AI/Analytics"
            android:textSize="20sp"
            android:background="@drawable/border"
            android:layout_marginTop="5dp"

            />


        <CheckBox
            android:id="@+id/checkBox5o"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="UI/UX/Designing"
            android:textSize="20sp"
            android:background="@drawable/border"
            android:layout_marginTop="5dp"

            />


        <CheckBox
            android:id="@+id/checkBox6o"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Finance"
            android:textSize="20sp"
            android:background="@drawable/border"
            android:layout_marginTop="5dp"

            />
        <CheckBox
            android:id="@+id/checkBox7o"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Consultancy"
            android:textSize="20sp"
            android:background="@drawable/border"
            android:layout_marginTop="5dp"
            />
        <CheckBox
            android:id="@+id/checkBox8o"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Other"
            android:textSize="20sp"
            android:background="@drawable/border"
            android:layout_marginTop="5dp"
            />
        <Button
            android:id="@+id/button34o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="UPDATE"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000" />
        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_below="@+id/button11"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
    </LinearLayout>
</ScrollView>